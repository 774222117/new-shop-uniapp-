page{
  background-color: #F2F2F2;
}
.live_main{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.tab-nav {
  position: fixed;
  width: 750rpx;
  top: 0;
  z-index: 1;
  height: 70rpx;
  display: flex;
  border-bottom: 4rpx solid #ff5041;
  transition: all 0.3s linear;
  margin-bottom: 20rpx;
}

.tab-nav .tab-nav-item {
  color: #6c6c6c;
  font-size: 26rpx;
  font-weight: bold;
  position: relative;
  flex: 1;
  width: 190rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F2F2F2;
}

.tab-nav-one .tab-nav-item {
  flex: initial;
  width: 30%;
}

.tab-nav .tab-nav-item span {
  position: relative;
}

.tab-nav .tab-nav-item.active {
  background-color: #ff5041;
  color: #fff;
  z-index: 2;
  border-radius: 3px 3px 0 0;
}

.live_info{
  position: relative;
  top: 70rpx;
  padding: 16rpx 16rpx;
  width:710rpx;
  background:rgba(255,255,255,1);
  border-radius:4px;
  margin: 8rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.liev_info_img{
  width: 300rpx;
  height: 180rpx;
}
.liev_info_img image{
  width: 300rpx;
  height: 180rpx;
}
.live_right_info{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}
.live_info_title{
  height:72rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:600;
  color:rgba(32,32,32,1);
  line-height:36rpx;
}
/*2行超出截断*/
.text-ellipsis{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}
.text-ellipsis_1{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}
.live_info_bottom{
  display: flex;
  flex-direction: column;
}
.live_info_desc{
  font-size:22rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color: rgba(155,155,155,1);
  line-height:32rpx;
  margin-bottom: 10rpx;
}
.live_info_startTime{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  line-height:32rpx;
}