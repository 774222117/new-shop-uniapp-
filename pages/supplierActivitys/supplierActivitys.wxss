page{
  background-color: #F2F2F2;
}
.activity_main{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.activity_info{
  position: relative;
  padding: 16rpx 16rpx;
  width:710rpx;
  background:rgba(255,255,255,1);
  border-radius:4px;
  margin: 8rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.activity_info_img{
  width: 300rpx;
  height: 180rpx;
}
.activity_info_img image{
  width: 300rpx;
  height: 180rpx;
}
.activity_right_info{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}
.activity_info_title{
  height:36rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:600;
  color:rgba(32,32,32,1);
  line-height:36rpx;
}
/*2行超出截断*/
.text-ellipsis{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}
.text-ellipsis_1{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}
.activity_info_bottom{
  display: flex;
  flex-direction: column;
}
.activity_info_desc{
  height: 64rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color: rgba(155,155,155,1);
  line-height:32rpx;
  margin-bottom: 10rpx;
}
.activity_info_startTime{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  line-height:32rpx;
}