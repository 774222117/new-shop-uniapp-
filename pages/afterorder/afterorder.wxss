/* pages/shoppay/shoppay.wxss */
page{
  padding-bottom: 190rpx;
}
.pubsty{
  width: 100%;
  background-color: white
}

.picktype{
  display: flex;
  flex-direction: row;
}
.picktype>.title{
  width: 180rpx;
  font-size: 26rpx;
  font-weight:600;
  color:rgba(32,32,32,1);
}
.picktype>.content{
  font-size:26rpx;
  line-height:36rpx;
  display: flex;
  color: #9B9B9B;
  align-items: center;
}
.pickTypeInfo{
  display: flex;
  flex-direction: column;
  font-size:28rpx;
  font-family:PingFang-SC-Bold,PingFang-SC;
  font-weight:bold;
  color:rgba(32,32,32,1);
  line-height:40rpx;
}
.pickTypeInfo-desc{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:#B6B6B6;
  line-height:34rpx;
}

/* 弹出框 */
.popModel{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,0.5)
}
.popModel .popImgBox{
  width: 712rpx;
  height: 712rpx;
  position: absolute;
  top: 212rpx;
  left: 19rpx;
}

.popModel .popImgBox image{
  width: 100%;
  height: 100%;
  display: block;
}
.popModel .popClose{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 335rpx;
  top: 924rpx;
}
.popModel .popClose image {
  width: 100%;
  height: 100%;
  display: block;
}

/*退款原因*/
.reasonRefund{
  width: 100%;
  height: 80rpx;
  background: #FFFFFF;
  font-size: 26rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #393939;
  line-height: 80rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  padding: 0 30rpx;
}
/*退款原因 内容*/
.reasonRefundContent{
  width: 100%;
  height: 264rpx;
  background: #FFFFFF;
}
.reasonRefundContent .contents{
  width: 694rpx;
  height: 244rpx;
  background: rgba(216, 216, 216, 0.49);
  border-radius: 16rpx;
  margin: 0 auto;
  padding: 22rpx 32rpx 0;
}
.reasonRefundContent .contents .titles{
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #9B9B9B;
  margin-bottom: 52rpx;
}
.reasonRefundContent .contents .titles .reasonRefundInput{
  width: 100%;
  height: 100%;
}
.fillImg{
  width: 100%;
  height: 112rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fillImg .items{
  width: 112rpx;
  height: 112rpx;
  background: #D8D8D8;
  border: 2rpx solid rgba(151, 151, 151, 0.54);
}
.fillImg .items .imgs{width: 100%;height:100%;display: block}
/*退货商品选择*/
.goodsChoice{
  width: 100%;
  height: 800rpx;
  margin-top: 12px;
  background-color: #FFFFFF;
}
.goodsChoice .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.goodsChoice .title view{
  font-size: 13px;
  font-weight: bold;
  color: #393939;
}
.shopCart-Item{
  display: flex;
  flex-direction: row;
  padding: 24rpx 30rpx;
  background-color: white;
  position:relative; 
}
.shopCar-LeftImg{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.shopCar-LeftImg image{
  width: 120rpx;
  height: 120rpx;
}
.shopCar-RightBox{
  display: flex;
  flex-direction: column;
  width: 378rpx;
  flex-shrink:0;
  margin-left: 20rpx;
}
.shopCar-PriceBox{
  display: flex;
  align-items: center;
}
.shopCar-topTitle{
  display: flex;
  justify-content: start;
  font-size:28rpx;
  font-family:PingFang-SC-Bold,PingFang-SC;
  font-weight:bold;
  color:rgba(32,32,32,1);
  line-height:40rpx;
  height: 80rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
  text-align: left;
}
.shopCar-countBox{
  display: flex;
  align-items: center;
}

 .shopCar-minusBtn,.shopCar-plusBtn{
  width: 44rpx;
  height: 44rpx;
  background-color: #FF3B30;
  color: white;
  text-align: center;
  line-height: 44rpx;
  border-radius: 50%;
  font-size: 34rpx;
}
 .shopCar-image{
  width: 44rpx;
  height: 44rpx;
}
.shopCar-goosNum{
  width: 84rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
}

.text-shopCarMoney1{
  font-size:28rpx;
  font-family:PingFang-SC-Heavy,PingFang-SC;
  font-weight:800;
  color:rgba(255,59,48,1);
  line-height:40rpx;
  margin-right: 10rpx;
  }
.text-shopCarMoney2{
  font-size:26rpx;
  font-family:PingFang-SC-Bold,PingFang-SC;
  font-weight:bold;
  color:rgba(155,155,155,1);
  line-height:36rpx;
  text-decoration:line-through;}
.shopItemList .rightBox .countBox{
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.line{
/*width: 150rpx;*/
height: 1rpx;
background-color: #D8D8D8;
}
.shopCart-Item::after{
  background-color: #D8D8D8;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(.5);
}
.shopCart-Item:last-child:after{
  height: 0;
}

/* 底部按钮 底部提交申请按钮 */
.btmBtnContent{
  width: 100%;
  height: 176rpx;
  background: white;
  position: fixed;
  bottom: 0;
  padding: 10rpx 30rpx 76rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btmBtnContent .leftInfo{
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #9B9B9B;
}
.btmBtnContent .rightBtn{
  width: 340rpx;
  height: 90rpx;
  background: #FF3B30;
  border-radius: 54rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 90rpx;
  text-align: center;
}
