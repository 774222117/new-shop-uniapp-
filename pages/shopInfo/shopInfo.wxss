page{
  display: flex;
  padding-top: 20rpx;
  justify-content: center;
}
.shop_info{
  width: 710rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 10rpx;
}
.shop_info .shop_name{
  font-size: 36rpx;
  font-weight: 500;
  line-height: 36rpx;
  height: 66rpx;
  padding: 15rpx;
}
.shop_info .shop_address{
  font-size: 26rpx;
  font-weight: 400;
  line-height: 26rpx;
  height: 46rpx;
  padding: 10rpx;
  color: rgb(141, 140, 140);
}
.shop_info .shop_open_time{
  font-size: 26rpx;
  font-weight: 400;
  line-height: 26rpx;
  height: 46rpx;
  padding: 10rpx;
  color: rgb(141, 140, 140);
}
.shop_info .shop_business_head{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 36rpx;
  height: 66rpx;
  padding: 11rpx;
}
.line{
margin: 0 auto;
height: 2rpx;
background-color: #D8D8D8;
}
.shop_business_image{
  margin-top: 10rpx;
  width: 700rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.business_image_area{
  width: 350rpx;
  height: 300rpx;
  margin-top: 10rpx;
}
.business_image{
  width: 340rpx;
  height: 300rpx;
  border: 2rpx solid #D8D8D8;
}
.business_image image{
  width: 100%;
  height: 100%;
}