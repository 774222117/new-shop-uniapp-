  color: #fff;
}

.topBox .userInfo .info {
  display: flex;

  align-items: center;
  width: 698rpx;
}

.topBox .userInfo .info text {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
