  background-color: white;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.codeInfo>.cu-form-group {
  min-height: 150rpx;
}

.codeInfo>.cu-form-group>.title {
  width: 240rpx;
}

.bar-top {
  display: flex;
  justify-content: flex-end;
  margin-right: 30rpx;
}

.codeTitle {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #202020;
  line-height: 44rpx;

}

.codeInput {
  width: 600rpx;
  height: 70rpx;
  background: #F2F2F2;
  border-radius: 16rpx;
}

.inputCodeView {
  display: flex;
  justify-content: center;
  margin-top: 22rpx;
}

.duihuanbtn {
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  width: 362rpx;
  height: 92rpx;
  background: #FF3B30;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.duihuanbtn text {
  width: 64rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 44rpx;
}

.coupon-count-info {
  display: flex;
  align-items: center;
}

.coupon-num {
  width: 36rpx;
  height: 36rpx;
  background: #FF4035;
  border-radius: 36rpx;
  color: #fff;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}