.myorder {
  margin-top: -86rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.line {
  /*width: 150rpx;*/
  height: 2rpx;
  background-color: #D8D8D8;
}

.card {
  width: 686rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 0 40rpx 0 rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.card-head {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(32, 32, 32, 1);
  line-height: 44rpx;
  padding: 18rpx 0 18rpx 24rpx;
}

.card-body {
  display: flex;
  flex-direction: row;
  padding: 24rpx 0 58rpx 0;
}

.card-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.card-btn image {
  width: 96rpx;
  height: 100rpx;
}

.card-btn text {
  color: #7F7F7F;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
}

.card-btn .buy-num {
  position: absolute;
  right: 25rpx;
  top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  background: #FF4035;
  border-radius: 36rpx;
  color: #fff;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-marggin {
  margin-top: 15rpx;
  font-size: 34rpx;
  color: #7F7F7F;
}

.nav_item {
  padding: 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.nav-item-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav-item-left image {
  height: 48rpx;
  width: 48rpx;
}

.nav-item-left text {
  padding-left: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(32, 32, 32, 1);
  line-height: 44rpx;
}

.font12 {
  font-size: 42rpx;
}

.barCodeBoxPopup {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;

}

.barCodeBox {
  border-radius: 20rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 382rpx;
  z-index: 99;
  background-color: white;
}

.barCodeBox .barCodeCanvasBox {
  width: 572rpx;
  height: 140rpx;
}

.barCodeCanvas {
  width: 100%;
  height: 140rpx;
}

.barCodeBox .barCodeNumBox {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 弹出框 */
.popModel {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5)
}

/* 兑换码信息 */
