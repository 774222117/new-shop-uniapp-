/* pages/expressInfo/expressInfo.wxss */
.mainBox {
  width: 702rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 24rpx 0;
  display: flex;
  flex-direction: column;
  margin: 24rpx auto;
}

/* 商品详情 */
.goodsList {
  width: 100%;
  height: 176rpx;
  display: flex;
  margin-bottom: 24rpx;
}

/* 商品图片 */
.goodsList_img {
  width: 176rpx;
  height: 176rpx;
  /* background: red; */
  border-radius: 8rpx;
  margin-right: 32rpx;
}

/* 右边商品详情 */
.goodsList_right {
  flex: 1;
  height: 176rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 商品名称 */
.goodsList_title {
  width: 100%;
  height: 120rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #323232;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box !important;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

/*规格*/
.goodsList_specs {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(20, 20, 20, .53);
  margin-top: 6rpx;
}

/* 价格 数量*/
.goodsList_PriceBox {
  width: 100%;
  height: 44rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/* 现价 */
.priceBox {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 36rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  color: #f35437;
}




.pricePoint {
  font-size: 26rpx;
  font-weight: 500;
}

/* 商品数量 */
.goodsNum {
  width: 40rpx;
  height: 34rpx;
  line-height: 34rpx;
  opacity: 0.53;
  font-size: 28rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  color: #323232;
}

.line {
  width: 100%;
  height: 2rpx;
  background: #e2e2e2;
  margin: 16rpx auto 28rpx;
}

.expressInfo_label {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #323232;
  margin-bottom: 20rpx;
  position: relative;
}
.copy-icon{
  /* height: 100%; */
  display: flex;
  align-items: center;
  position: absolute;
  top:0;
  right: 10rpx;
}

.expressInfo_detailsBox {
  width: 100%;
  padding: 16rpx 16rpx 0 56rpx;
  background: #FFF4F5;
  margin: 10rpx auto 24rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.expressInfo_details {
  margin-bottom: 36rpx;
  width: 100%;
  position: relative;
}


.expressInfo_details::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  background: #CDCDCD;
  border-radius: 50%;
  position: absolute;
  left: -30rpx;
  top: 14rpx;
  z-index: 99;
}
.expressInfo_details:first-of-type::before{
  content: '';
  width: 12rpx;
  height: 12rpx;
  background: #FD6A7C;
  border-radius: 50%;
  position: absolute;
  left: -30rpx;
  top: 14rpx;
  z-index: 99;
}


.expressInfo_details::after {
  content: '';
  width: 2rpx;
  height: calc(100% + 36rpx);
  background: #E8DFE0;
  position: absolute;
  left: -26rpx;
  top: 20rpx;
}

.expressInfo_details:last-child::after {
  content: '';
  width: 0;
}

.expressInfo_detailsStatus {
  width: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #393939;
  margin-bottom: 10rpx;
}

.expressInfo_detailsTime {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #393939;
}

.btn {
  width: 30rpx;
  height: 25rpx;
  position: absolute;
  bottom: 30rpx;
  right: 24rpx;
  z-index: 5;
}