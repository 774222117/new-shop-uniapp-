@import '../../component/wxParse/wxParse.wxss';
/*优享卡*/
page,.container-box{
  width: 100%;
  height: 100%;
  background: #F2F2F2;
  overflow-x: hidden;
  overflow-y: auto;
}
.lt{
  float: left;
}
.rt{
  float:right;
}
.clearFix::after{
  content:'';
  display: block;
  clear:both;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}  
/*主体*/
.header-image{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.header-image>image{
  width: 100%;
  height: 560rpx;
  display: block;
}
.eqyityItem{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.equity1-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #FFFFFF;
  padding: 20rpx 40rpx 28rpx;
  box-sizing: border-box;
}
.equity1-box .quity-text{
  float: left;
  font-size: 28rpx;
  color:rgba(0,0,0,0.6);
  font-weight: bold;  
  margin-bottom: 32rpx;
}
.equity1-box .quity-text2{
  font-size: 32rpx;
  color:#FF4C42;
  font-weight: bold;
}
.eqyityItem .image1{
  height: 60rpx;
  width: 160rpx;
  float: left;
  display: block;
  margin-bottom: 28rpx;
}
.equity2-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.eqyityItem .image2{
  width: 100%;
  float: left;
  display: block;
  height: 124rpx;
}
/*底部*/
.detail-footer{
  width: 100%;
  height: 120rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
  z-index: 2;
}
.detail-footer.active{
  height: 176rpx;
}
.footer-btn{
  width: 44rpx;
  margin-top:20rpx;
}
.footer-img{
  width: 44rpx;
  height: 44rpx;
}
.footer-img.s{
  margin-bottom: 4rpx;
}
.footer-text{
  font-size: 22rpx;
  color: #5D5D5D;
}
.footer-index{
  margin-left: 44rpx;
}
.footer-share{
  margin-left: 80rpx;
}
.footer-code{
  margin-left: 80rpx;
}
.footer-getCode{
  width: 340rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #FD3333;
  margin-top: 10rpx;
  margin-left: 44rpx;
  display: inline-block;
  font-size: 32rpx;
  line-height: 90rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
}