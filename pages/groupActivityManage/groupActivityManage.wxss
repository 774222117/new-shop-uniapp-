/* pages/groupActivityManage/groupActivityManage.wxss */
.iconImg {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.tabs {
  width: 100%;
  height: 74rpx;
  display: flex;
  position: relative;
}

.tabs-item {
  transition: all 0.5s;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
}

.tabs-item-active {
  color: #333333;
}

.active {
  width: 50%;
  height: 4rpx;
  background-color: #07C060;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: all 0.5s;
}

.active2 {
  left: 50%;
}

.tips {
  width: 100%;
  height: 82rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #999999;
}

.card {
  width: 706rpx;
  height: 298rpx;
  margin: 0 auto 18rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  border-radius: 26rpx;
  background: #fff;
  box-shadow: 0 0 40rpx 0 rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.card-head {
  width: 100%;
  height: 66rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #E5E5E5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-headL {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #333333;
}

.card-headR {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #666666;
}

.card-body {
  width: 100%;
  height: 168rpx;
  padding: 22rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}

.card-body-font1 {
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #333333;
  line-height: 26rpx;
  margin-bottom: 28rpx;
}

.card-body-middle {
  display: flex;
  margin-bottom: 10rpx;
}

.card-body-font2 {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  line-height: 24rpx;
  font-weight: 500;
  color: #666666;
  margin-right: 15rpx;
}

.card-body-font3 {
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  line-height: 26rpx;
  font-weight: 500;
  color: #029539;
}

.card-body-font4 {
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  line-height: 32rpx;
  font-weight: 500;
  color: #fd5362;
}

.card-body-font5 {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  line-height: 24rpx;
  color: #FD5362;
}

.card-body-bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-body-bottomL,
.card-body-bottomR {
  height: 32rpx;
  display: flex;
  align-items: flex-end;
}

.card-foot {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn {
  margin: 0;
  padding: 0;
  width: 138rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FD5362;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #ffffff;
}

.btn+.btn {
  margin-left: 18rpx;
}