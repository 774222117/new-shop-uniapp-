page {
  background-color: #f2f2f2;
}
.couponListStatus {
  position: relative;
  padding: 0 30rpx;
}
  /* couponListBox */
  .couponListStatus .couponListBox {
    display:flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    background-color: #fff;
    align-items: center;
    padding:24rpx 0;
    margin-bottom: 20rpx;
  }
  .couponListStatus .couponListBox {  
    margin-top: 20rpx;
  }
  .couponListStatus .couponListBox .couponImg {
    width: 88rpx;
    height: 112rpx;
    margin-left: 40rpx;
  }
  .couponListStatus .couponListBox .couponDesc{
    color:#FF3B30;
    width: 52%;
  }
  .couponListStatus .couponListBox .couponDesc .title {
    font-size:28rpx;
    color: #363636;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  } 
  .couponListStatus .couponListBox .couponDesc .cardType {
    width: 72rpx;
    height: 32rpx;
  }
  .couponListStatus .couponListBox .couponDesc .time {
    color:#B8B8B8;
    font-size:22rpx;
  }
  .couponListStatus .couponListBox  .useBtn {
    width: 140rpx;
    height: 50rpx;
    border-radius: 28rpx;
    color:#fff;
    background-color:#FF3B30;
    text-align: center;
    line-height: 50rpx;
    font-size: 24rpx;
    margin-right: 20rpx;
  }
  .couponListStatus .couponListBox .couponDesc.used{
   color:#B8B8B8;
  }
  