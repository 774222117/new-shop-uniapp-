.car_main{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.tab-nav {
  height: 70rpx;
  display: flex;
  border-bottom: 4rpx solid #ff5041;
  transition: all 0.3s linear;
  margin-bottom: 20rpx;
}

.tab-nav .tab-nav-item {
  color: #6c6c6c;
  font-size: 26rpx;
  font-weight: bold;
  position: relative;
  flex: 1;
  width: 190rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-nav-one .tab-nav-item {
  flex: initial;
  width: 30%;
}

.tab-nav .tab-nav-item span {
  position: relative;
}

.tab-nav .tab-nav-item.active {
  background-color: #ff5041;
  color: #fff;
  z-index: 2;
  border-radius: 3px 3px 0 0;
}

