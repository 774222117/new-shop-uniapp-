/* component/seckill/seckill.wxss */
/* 限时秒杀团  */
.timeLimitSeckill{
  width: 686rpx;
  height: 356rpx;
  margin: 0 auto 32rpx;
  position: relative;
}
.timeLimitSeckill .bgImgs{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.timeLimitSeckill .bgImgs .imgBlock{
  width: 100%;
  height: 100%;
}
.timeLimitSeckill .contents{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 3
}
/* 秒杀团头部 */
.timeLimit_head{
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.timeLimit_head .left{
  width: 230rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-left: 34rpx;
  display: flex;
  align-items: center;
}
.timeLimit_head .left .text{
  font-size: 36rpx;
  color: white;
  line-height: 56rpx;
  margin-right: 12rpx;
}
.timeLimit_head .left .icon{
  width: 20rpx;
  height: 30rpx;
}
.timeLimit_head .left .icon .imgBlock{
  width: 100%;
  height: 100%;
  display: block;
}
.timeLimit_head .right{
  width:220rpx;
  height:56rpx;
  background:rgba(220,62,46,1);
  border-radius:28rpx;
  margin-right: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.timeLimit_head .right .alarmClock{
  width: 36rpx;
  height: 38rpx;
  margin-right: 10rpx;
}
.timeLimit_head .right .alarmClock .imgBlock{
  width: 100%;
  height: 100%;
  display: block;
}
.timeLimit_head .right .times{
  /* width: 34rpx; */
  height: 34rpx;
  line-height: 34rpx;
  font-size: 26rpx;
  color:rgba(255,255,255,1);
}
.timeLimit_head .right .times1{
  width: 64rpx;
}
/* 秒杀团内容 */
.timeLimit_contents{
  width: 100%;
  height: 248rpx;
  overflow: hidden;
  display: flex;
}
.timeLimit_contents .left{
  width: 276rpx;
  height: 214rpx;
  margin: 14rpx 0 0 18rpx;
}
.timeLimit_contents .left .imgBlock{
  width: 100%;
  height: 100%;
  display: block;
}
.timeLimit_contents .right{
  width: 342rpx;
  height: 214rpx;
  margin: 14rpx 0 0 18rpx;
  margin-left: 20rpx;
}
.timeLimit_contents .right .text1{
  width: 100%;
  height:40rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(43,43,43,1);
  line-height:40rpx;
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
}
.timeLimit_contents .right .text2{
  width: 100%;
  height:44rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(32,32,32,0.4);
  line-height:36rpx;
  margin-top: 10rpx;
}
.timeLimit_contents .right .text3{
  width: 342rpx;
  height: 86rpx;
  margin-top: 30rpx;
  position: relative;
}
.timeLimit_contents .right .text3 .priceTextBackground{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.timeLimit_contents .right .text3 .priceTextBackground .imgBlock{
  width: 100%;
  height: 100%;
  display: block;
}
.timeLimit_contents .right .text3 .lishengbeijin{
  width: 130rpx;
  height: 48rpx;
  position: absolute;
  top: -32rpx;
  left: 104rpx;
}
.timeLimit_contents .right .text3 .lishengbeijin .imgBlock{
  width: 100%;
  height: 100%;
  display: block;
}
.timeLimit_contents .right .text3 .lishengbeijin .lishenText{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 48rpx;
  font-size:22rpx;
  color:rgba(200,41,1,1);
  font-weight: bold;
  position: absolute;
  z-index: 3;
  
}
.timeLimit_contents .right .text3 .priceText{
  width: 100%;
  height: 100%;
  color: white;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  padding-bottom: 12rpx;
}
.timeLimit_contents .right .text3 .priceText .priceText1{
  font-size: 26rpx;
  margin-left: 22rpx;
}
.timeLimit_contents .right .text3 .priceText .priceText2{
  font-size: 40rpx;
}
.timeLimit_contents .right .text3 .priceText .priceText3{
  font-size: 26rpx;
  color: rgba(255,252,255,0.4);
  margin-left: 6rpx;
  text-decoration:line-through;
}
.timeLimit_contents .right .text3 .priceText .priceText4{
  width:1px;
  height:24px;
  background:rgba(255,255,255,0.4);
  margin-left: 6rpx;
}
.timeLimit_contents .right .text3 .priceText .priceText5{
  font-size: 28rpx;
  color: rgba(255,252,255,1);
  margin-left: 6rpx;
}
/* 限时秒杀团 结束 */